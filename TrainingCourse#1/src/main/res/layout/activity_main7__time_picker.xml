<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main7__time_picker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.alyafei.myapplication.Main7Activity_TimePicker">

    <Button
        android:text="Delete Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/showTimeButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:id="@+id/deleteButton"
        android:textAllCaps="false"
        android:onClick="deleteTime"

        />

    <Button
        android:text="Select Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showTimeButton"
        android:textAllCaps="false"
        android:layout_marginTop="144dp"
        android:onClick="showTime"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/textViewTime"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTime"
        android:text="                     "
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:layout_marginTop="81dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/showTimeButton"
        android:layout_marginStart="8dp" />
</RelativeLayout>
